@model IEnumerable<CoursesStore.Models.Course>


@{
    ViewData["Title"] = "List of Courses";
}

<body style="">
   
    <div class="card text-bg-dark border-0">
        <video src="~/Graphics/Design/videoplayback.mp4" muted autoplay loop class="card-img rounded-0"></video>
        <div class="card-img-overlay h-75 text-light container d-flex flex-column justify-content-center video-items-div">
            <h2 class="fw-bold pt-5 display-6 text-center BLOCKBUSTER-EFFECTS-tag">BLOCKBUSTER EFFECTS<br>FOR FILMMAKERS</h2>
            <div class="buttons d-flex justify-content-center">
                <a class="btn btn-outline-light btn-lg" href="#" role="button"> Make Order</a>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 py-5">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm card-hover">
                        <div class="row g-0">
                            <div class="col-md-12">
                                <div class="card-header text-white bg-dark">
                                    <p class="card-text">
                                        <h5 class="card-title">
                                            @item.Name
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                            }
                                        </h5>
                                    </p>    
                                </div>
                            </div>
                            @{
                                string imageName = item.Name.Replace(" ", "_");
                            }
                            <div class="card-hover">
                                <div class="image-container">
                                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">
                                        <img src="~/Graphics/Course/@item.Name/@(imageName).png" class="img-fluid" alt="Name">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>

