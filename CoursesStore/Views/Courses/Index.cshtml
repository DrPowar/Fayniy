@model IEnumerable<CoursesStore.Models.Course>


@{
    ViewData["Title"] = "List of Courses";
}

<body style="">
    <div style="margin: auto; width: 100vw;">
        <video src="~/css/Image/videoplayback.mp4" muted autoplay loop class="video"></video>
    </div>

    <div class="row" style="display: flex; justify-content: space-evenly; margin: 0 auto;">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-xs-6 border-primary mb-3" style="margin-left: 10px">
                <div class="card mb-4" style="max-width: 500px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-dark">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.Name
                                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                        {
                                            <a class="text-white float-right" asp-action="Edit" asp-route-id=" Id"><i class="bi bi-pencil-square"></i></a>
                                        }
                                    </h5>
                                </p>
                            </div>
                        </div>
                        @*<div class="col-md-6" style="margin: auto; width: 50%; padding: 10px; background-color: red; background-image: url('../css/Image/Course.png'); background-repeat: no-repeat; background-size: cover;">
                            <img src="~/css/Image/Course.png" class="img-fluid" alt="Name">
                        </div>*@
                        <div class="col-md-6" style="margin: auto; width: 50%; padding: 10px;">
                            <img src="~/css/Image/Course.png" class="img-fluid" alt="Name">
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye-fill"></i> Show Details
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

